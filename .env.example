# App
APP_NAME=CareerDev AI
ENVIRONMENT=development
ALLOWED_HOSTS=["*"]
SECRET_KEY=super-secret-key-change-in-production
SESSION_SECRET_KEY=change-this-to-a-secure-random-string

# Database
DATABASE_URL=sqlite:///./careerdev.db

# 2FA / Notifications
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=user@example.com
SMTP_PASSWORD=change_me_to_your_password
SMTP_FROM_EMAIL=noreply@careerdev.ai
ADMIN_EMAIL=admin@careerdev-ai.online

# Advanced Email Settings
SMTP_USE_TLS=False
SMTP_USE_STARTTLS=True
SMTP_TIMEOUT=10

TELEGRAM_BOT_TOKEN=your_telegram_token

# AI
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-5-mini

# OAuth
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret

# Payments (Stripe)
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...

# Feature Flags
ENABLE_CHATBOT=True
ENABLE_VOICE_MODE=True
ENABLE_SOCIAL_LOGIN=True
ENABLE_REGISTRATION=True
